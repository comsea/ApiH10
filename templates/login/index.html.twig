{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div class="flex flex-row justify-center">
            <div class="text-red-600 border border-red-600 bg-red-300 p-2 mt-4 rounded">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </div>
    {% endif %}

    <div class="w-full h-screen bg-[#174E65] flex justify-center items-center">
        <div class="w-[94%] h-[90%] bg-white rounded-3xl p-8 flex flex-col justify-center items-center">
            <p class="text-4xl">Se connecter</p>
            <form action="{{ path('app_login') }}" method="post" class="flex flex-col justify-center items-start lg:w-1/3 md:w-1/2 sm:w-3/5 w-11/12 bg-[#174E65] rounded p-4 text-white mt-8">
                <div class="w-full mb-2">
                    <label for="username">Email:</label>
                    <input type="text" id="username" name="_username" class="w-full p-1 rounded-sm text-black"/>
                </div>

                <div class="w-full mb-8">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password" class="w-full p-1 rounded-sm text-black"/>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="bg-[#7C929B] text-[#FFFFFF] px-4 py-1 rounded-sm">Se connecter</button>
            </form>
        </div>
    </div>

{% endblock %}
